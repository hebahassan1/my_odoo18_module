<templates id="template" xml:space="preserve">

    <!-- Add Order Type button to POS Control Buttons -->
    <t t-name="PosTypeOrderControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'control-buttons')]" position="inside">
            <button class="control-button button btn btn-primary"
              t-attf-class="control-button button btn #{ currentOrder.selectedOrderType and currentOrder.selectedOrderType.name !== 'Normal' ? 'btn-warning' : 'btn-primary' }"

                id="posordertypebtn"
                t-on-click="onClickSelectOrderType"
                t-if="pos.config.is_ot_in_product">
                <i class="fa fa-list-ul" />
                <span id="ordertype_id">Order Type:  </span>
                <span>
                <t t-esc="currentOrder and currentOrder.selectedOrderType ? currentOrder.selectedOrderType.name : 'Normal'" />

                </span>
            </button>
        </xpath>
    </t>

    <!-- Add Order Type button to Payment Screen -->
    <t t-name="PosTypeOrderPaymentScreen" t-inherit="point_of_sale.PaymentScreenButtons" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'payment-buttons')]" position="inside">
            <button class="control-button button btn btn-primary"
               t-attf-class="control-button button btn #{ currentOrder.selectedOrderType and currentOrder.selectedOrderType.name !== 'Normal' ? 'btn-warning' : 'btn-primary' }"

                id="posordertypebtn"
                t-on-click="onClickSelectOrderType"
                t-if="pos.config.is_ot_in_payment">
                <i class="fa fa-list-ul" />
                <span id="ordertype_id">Order Type:  </span>
                 <span>
                <t t-esc="currentOrder and currentOrder.selectedOrderType ? currentOrder.selectedOrderType.name : 'Normal'" />

                </span>
            </button>
        </xpath>
    </t>

</templates>